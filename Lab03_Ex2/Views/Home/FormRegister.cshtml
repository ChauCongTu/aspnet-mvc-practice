
@{
    ViewBag.Title = "Đăng ký thành viên";
}

<h2>@ViewBag.Title</h2>

@{
    Html.BeginForm("Register", "Home", FormMethod.Get);
    <table class="table table-bordered">
        <t class="table-header">thông tin về đơn vị tuyển</t>
        <tr>
            <td class="td-label">@Html.Label("Tên đơn vị tuyển (*)")</td>
            <td>@Html.TextBox("recruitingAgencyName")</td>
        </tr>
        <tr>
            <td class="td-label">@Html.Label("Loại hình doanh nghiệp (*)")</td>
            <td>@Html.DropDownList("businessType", new SelectList(ViewBag.listBusinessType))</td>
        </tr>
        <tr>
            <td class="td-label">@Html.Label("Số lượng nhân viên")</td>
            <td>@Html.TextBox("numberOfEmployees")</td>
        </tr>
    </table>
    <table class="table table-bordered">
        <t class="table-header">thông tin về đơn vị tuyển</t>
        <tr>
            <td class="td-label">@Html.Label("Địa chỉ (*)")</td>
            <td>@Html.TextArea("address")</td>
        </tr>
        <tr>
            <td class="td-label">@Html.Label("Người liên hệ (*)")</td>
            <td>@Html.TextBox("contactPerson")</td>
        </tr>
        <tr>
            <td class="td-label">@Html.Label("Số điện thoại (*)")</td>
            <td>@Html.TextBox("phoneNumber")</td>
        </tr>
        <tr>
            <td class="td-label">@Html.Label("Số Fax")</td>
            <td>@Html.TextBox("faxNumber")</td>
        </tr>
        <tr>
            <td class="td-label">@Html.Label("Email")</td>
            <td>@Html.TextBox("businessType")</td>
        </tr>
        <tr>
            <td class="td-label">@Html.Label("Địa chỉ Website")</td>
            <td>@Html.TextBox("websiteUrl")</td>
        </tr>
    </table>
    <table class="table table-bordered">
        <t class="table-header">thông tin về đơn vị tuyển</t>
        <tr>
            <td class="td-label">@Html.Label("Tên đăng nhập (*)")</td>
            <td>@Html.TextBox("username")</td>
        </tr>
        <tr>
            <td class="td-label">@Html.Label("Mật khẩu (*)")</td>
            <td>@Html.TextBox("password")</td>
        </tr>
        <tr>
            <td class="td-label">@Html.Label("Xác nhận mật khẩu (*)")</td>
            <td>@Html.TextBox("confirmPassword")</td>
        </tr>
    </table>
    <table class="table table-bordered">
        <t class="table-header">thông tin về đơn vị tuyển</t>
        <tr>
            <td class="td-label">@Html.Label("Nhận thư điện tử")</td>
            <td>
                @Html.RadioButton("receiveEmail", "Nhận", true) Nhận
                @Html.RadioButton("receiveEmail", "Không") Không
            </td>
        </tr>
    </table>
    <p class="text-center">
        <button class="btn btn-default">Cập nhật</button>
        <a class="btn btn-default" href="@Url.Action("FormRegister")">Hủy bỏ</a>
    </p>
}